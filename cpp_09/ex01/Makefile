NAME = RPN

CC = c++
CC_STRICT = $(CC) $(CCF_STRICT) $(CCF_STD)

CCF_STRICT = -Wall -Wextra -Werror
CCF_STD = -std=c++98

MAKE_EXTERNAL = make -C
SAFE_MAKEDIR = mkdir -p
ARCHIVE_AND_INDEX = ar -rcs
COPY = cp

REMOVE = /bin/rm -f
REMOVE_RECURSIVE = /bin/rm -rf

SOURCES = RPN.cpp main.cpp
OBJECTS = $(SOURCES:.cpp=.o)

################################################################################
# REQUIRED
################################################################################

all: $(NAME)

%.o: %.cpp
	$(CC_STRICT) -c $< -o $@

$(NAME): $(OBJECTS)
	$(CC_STRICT) $(OBJECTS) -o $(NAME)

re: fclean all

################################################################################
# CLEAN
################################################################################

clean:
	$(REMOVE) $(OBJECTS)

fclean: clean
	$(REMOVE) $(NAME)

################################################################################
# EXAMPLES
################################################################################

run: re
	# ./$(NAME) "1 2 * 2 / a * 2 4 - +"
	# ./$(NAME) "(1 + 1)"

	./$(NAME) "8 9 * 9 - 9 - 9 - 4 - 1 +"
	./$(NAME) "7 7 * 7 -"
	./$(NAME) "1 2 * 2 / 2 * 2 4 - +"

vg: re
	# valgrind ./$(NAME) "1 2 * 2 / a * 2 4 - +"
	# valgrind ./$(NAME) "(1 + 1)"

	valgrind ./$(NAME) "8 9 * 9 - 9 - 9 - 4 - 1 +"
	valgrind ./$(NAME) "7 7 * 7 -"
	valgrind ./$(NAME) "1 2 * 2 / 2 * 2 4 - +"

################################################################################
# PHONY
################################################################################

.PHONY: all re clean fclean run vg
